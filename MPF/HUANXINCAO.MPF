;R150=15000;砂轮转速
;R151=30;头架转速
;R152=0;Z轴磨削位置
;R153=0;X轴磨削起始
;R154=0.01;进刀量
;R155=0.6;进刀速度
;R156=2;进刀完成停留时间:秒
;R157=5;进刀次数

DEF REAL CURRENT_COUNT

CURRENT_COUNT=0;

F_GRINDWHEEL_RUN(R150);

MSG("头架旋转中...");
M3 S=R151;

G90 G01 X=R153-10 F=3000
G90 G01 Z=R152 F=3000

G90 G01 X=R153-1 F1000
G90 G01 X=R153-0.1 F=100
G90 G01 X=R153 F10

WHILE(CURRENT_COUNT<R157)
    STOPRE
    CURRENT_COUNT=CURRENT_COUNT+1;
    R153=R153+R154;
    G90 G01 X=R153 F=R155;
    G4 F=R156;
ENDWHILE

G90 G01 X=R153-10 F=1000;

M30

